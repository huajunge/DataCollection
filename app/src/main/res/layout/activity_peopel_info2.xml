                        android:layout_width="200dp">

                    </Spinner>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_addweifa"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="新增违法" />

                <TextView
                    android:id="@+id/text_weifa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="已添加违法数0" />
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle"
                android:visibility="gone"
                >

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="驾照限制:" />

                    <Spinner
                        android:id="@+id/sp_jiazhaoxianzhi"
                        style="@style/stylespanner"
                        android:layout_width="240dp">

                    </Spinner>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_addxianzhi"
