                    android:text="新增行为" />

                <TextView
                    android:id="@+id/xingweishu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="已添加行为数0" />
            </LinearLayout>

            <LinearLayout
                style="@style/layoutstyle"
                android:layout_marginBottom="0dp">

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="精神状态:" />

                    <Spinner
                        android:id="@+id/sp_sgfsszhuangtai"
                        style="@style/stylespanner"
                        android:layout_width="160dp">

                    </Spinner>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_addzhuangtai"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="新增状态" />

                <TextView
                    android:id="@+id/text_zhuangtainums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="已添加状态数0" />
            </LinearLayout>

            <LinearLayout
                style="@style/layoutstyle"
                android:layout_marginBottom="0dp">

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
