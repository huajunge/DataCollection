                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkGrey" />
            </LinearLayout>
            <LinearLayout style="@style/layoutstyle">

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
