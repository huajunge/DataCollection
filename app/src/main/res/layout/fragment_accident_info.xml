                    android:text="车辆碰撞类型:" />

                <Spinner
                    android:id="@+id/sp_caraccident"
                    style="@style/stylespanner"
                    android:layout_width="325dp">

                </Spinner>
            </LinearLayout>
        </LinearLayout>
        <!--二次事故-->
        <LinearLayout
            android:id="@+id/shigu2"
            style="@style/layoutstyle"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/layoutstyle2"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/textstyle"
                        android:text="二次事故:" />

                    <Spinner
                        android:id="@+id/shijian2"
                        style="@style/stylespanner"
                        android:layout_weight="1">

                    </Spinner>

                    <Spinner
                        android:id="@+id/sp_shijian_type2"
                        style="@style/stylespanner"
                        android:layout_weight="1">

                    </Spinner>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="发生二次事故"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pzlx2"
                style="@style/layoutstyle"
                android:visibility="gone">

                <LinearLayout style="@style/layoutstyle2"

                    >

                    <TextView
                        style="@style/textstyle"
                        android:text="车辆碰撞类型:" />

                    <Spinner
                        android:id="@+id/sp_caraccident2"
                        style="@style/stylespanner"
                        android:layout_width="325dp">

                    </Spinner>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layoutmargin"
            android:background="@color/bgofdefault" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/titlecolor"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@color/darkGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView style="@style/halfline" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="人车数量"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xlTextSize" />

                <ImageView style="@style/halfline" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkGrey" />
        </LinearLayout>

        <LinearLayout style="@style/layoutstyle">

            <LinearLayout
                style="@style/layoutstyle2"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp">

                <TextView
                    style="@style/textstyle"
                    android:text="涉及车数:" />

                <Spinner
                    android:id="@+id/jidongcheshu"
                    style="@style/stylespanner"
                    android:layout_weight="1"></Spinner>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/layoutstyle">

            <LinearLayout
                style="@style/layoutstyle2"
                android:layout_width="wrap_content"
                android:layout_weight="1">

                <TextView
                    style="@style/textstyle"
                    android:text="驾乘人数:" />

                <EditText
                    android:id="@+id/renshu"
                    style="@style/myeditstyle"
                    android:layout_width="110dp"
                    android:layout_weight="1"
                    android:hint="1" />
            </LinearLayout>

            <LinearLayout
                style="@style/layoutstyle2"
                android:layout_width="wrap_content"
                android:layout_weight="1">

                <TextView
                    style="@style/textstyle"
                    android:text="非驾乘人数:"

                    />

                <EditText
                    android:id="@+id/outrenshu"
                    style="@style/myeditstyle"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:hint="0" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/layoutstyle">


            <LinearLayout
                style="@style/layoutstyle2"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView7"
                    style="@style/textstyle"
                    android:text="受伤人数:" />

                <EditText
                    android:id="@+id/ssrenshu"
                    style="@style/myeditstyle"
                    android:layout_width="110dp"
                    android:layout_weight="1"
                    android:hint="0" />
            </LinearLayout>

            <LinearLayout
                style="@style/layoutstyle2"
                android:layout_weight="1">

                <TextView
                    style="@style/textstyle"
                    android:text="死亡人数:" />

                <EditText
                    android:id="@+id/swrenshu"
                    style="@style/myeditstyle"
                    android:layout_width="115dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:hint="0" />
            </LinearLayout>
        </LinearLayout>
        <!-- 时间信息-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layoutmargin"
            android:background="@color/bgofdefault" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/titlecolor"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@color/darkGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView style="@style/halfline" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="其他信息"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xlTextSize" />

                <ImageView style="@style/halfline" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkGrey" />
        </LinearLayout>

        <LinearLayout style="@style/layoutstyle">

            <LinearLayout
                style="@style/layoutstyle2"
                android:layout_weight="1"
                android:visibility="visible">

                <TextView
                    style="@style/textstyle"
                    android:text="大巴用途:" />

                <Spinner
                    android:id="@+id/sp_busshuxing"
                    style="@style/stylespanner"
                    android:layout_weight="1">

                </Spinner>
            </LinearLayout>

            <LinearLayout
                style="@style/layoutstyle2"
                android:layout_weight="1">

                <TextView
                    style="@style/textstyle"
                    android:text="肇事逃逸:" />

                <Spinner
                    android:id="@+id/sp_run"
                    style="@style/stylespanner"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                </Spinner>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/layoutstyle">

            <Spinner
                android:id="@+id/sp_dangers"
                style="@style/stylespanner"
                android:visibility="gone"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dangers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout style="@style/layoutstyle">

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="机动车辆是否有危险有害物(HM)标识？" />

                    <RadioGroup
                        android:id="@+id/weixianbiaozhi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/yes"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="有" />

                        <RadioButton
                            android:id="@+id/no"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="无" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wxbiaowei"
                style="@style/layoutstyle"
                android:visibility="visible">

                <LinearLayout
                    style="@style/layoutstyle2"
                    android:layout_weight="1">

                    <TextView
                        style="@style/textstyle"
                        android:text="危险有害物标识中可看出:" />

                    <Spinner
                        android:id="@+id/sp_weixianbiaozhi"
                        style="@style/stylespanner"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">

                    </Spinner>
                </LinearLayout>
            </LinearLayout>
            <!--存放处释放的有害物质（货仓）-->

            <LinearLayout style="@style/layoutstyle">

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="存放处释放的有害物质（货仓）" />

                    <RadioGroup
                        android:id="@+id/youhaiwuzhi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="是" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="否" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layoutmargin"
            android:background="@color/bgofdefault" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/titlecolor"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@color/darkGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView style="@style/halfline" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="现场照片"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xlTextSize" />

                <ImageView style="@style/halfline" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkGrey" />
        </LinearLayout>

        <LinearLayout
            style="@style/layoutstyle"
            android:layout_marginLeft="10dp"

            >

            <LinearLayout
                style="@style/layoutstyle2"
                android:layout_width="100dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/addphotos"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/addphoto" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
